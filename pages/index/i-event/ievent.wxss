/*横向布局  */

.layout_horizontal {
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
}

/*纵向布局  */

.layout_vertical {
  height: 100rpx;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: column;
}

/*划线  */

.line {
  background-color: blue;
  height: 2rpx;
  width: 100%;
}

.list_pic {
  width: 260rpx;
  height: 200rpx;
}

.flex {
  flex: 1;
}

.list {
  margin-left: 30rpx;
  margin-right: 30rpx;
  border-bottom: 4rpx solid #e5e5e5;
  padding-bottom: 25rpx;
  margin-top: 25rpx;
}

.list-title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-size: 14px;
  font-weight: bold;
  margin-left: 20rpx;
}

.list-tip {
  color: #307ec6;
  font-size: 9px;
  padding-left: 30rpx;
  padding-top: 5rpx;
}

.list_icon1 {
  width: 40rpx;
  height: 40rpx;
  padding-left: 30rpx;
  padding-top: 20rpx;
  padding-right: 10rpx;
}

.list-place {
  font-size: 22rpx;
  padding-top: 15rpx;
  line-height: 35rpx;
  color: #999;
}

.list_icon2 {
  width: 40rpx;
  height: 40rpx;
  padding-left: 30rpx;
  padding-right: 10rpx;
}

.list-grade {
  font-size: 22rpx;
  margin-top: 5rpx;
  color: #999;
}
