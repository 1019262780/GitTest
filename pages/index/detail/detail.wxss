.list {
  margin-left: 30rpx;
  margin-right: 30rpx;
  padding-bottom: 25rpx;
  margin-top: 50rpx;
}

.list_icon1 {
  width: 120rpx;
  height: 120rpx;
  padding-right: 10rpx;
}

.hr {
  background-color: #f0f0f0;
  height: 10px;
  margin-top: 30px;
}

/*横向布局  */

.layout_horizontal {
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
}

/*纵向布局  */

.layout_vertical {
  height: 100rpx;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: column;
}

.list1 {
  padding-bottom: 25px;
}

.list-back {
  background-image: url("http://106.12.109.65/yousai_img/detail%20(1).png");
  background-size: 100% 100%;
}

.list-title {
  font-size: 14px;
  font-weight: bold;
  margin-left: 20rpx;
}

.list-title1 {
  font-size: 12px;
  margin-left: 20rpx;
  opacity: 0.7;
  margin-top: 10px;
}

.list-title2 {
  width: 30%;
  font-size: 14px;
  font-weight: bold;
}

.list-title3 {
  font-size: 14px;
  width: 70%;
  opacity: 0.7;
}

.hr1 {
  padding-top: 10px;
  border-bottom: 2rpx solid #dbd9d9;
  opacity: 0.7;
}

.profile {
  font-size: 15px;
  text-align: center;
  font-weight: bold;
  margin-bottom: 10px;
}

.profile-tip {
  font-size: 14px;
  margin-top: 10px;
  line-height: 30px;
}

.comment-detail-box {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  overflow-y: hidden;
}

.comment-main-box {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 100rpx;
  right: 0;
  overflow-y: auto;
  overflow-x: hidden;
  -webkit-overflow-scrolling: touch;
}

.bottom {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  border-top: 1rpx solid #d5d5d5;
  min-height: 100rpx;
  z-index: 1000;
}

.bottom .bottom-content {
  width: 100%;
  height: 100%;
  display: flex;
  padding: 20rpx 0;
}

.shareicon {
  width: 100%;
  justify-content: center;
  opacity: 0.8;
  font-size: 14px;
}

.img {
  width: 20px;
  height: 20px;
  margin: 0 5px;
  border: 2rpx solid #d5d5d5;
  border-radius: 20px;
  padding: 15rpx;
}

.img1 {
  width: 80px;
  height: 30px;
  margin: 2px 5px;
}

.list2 {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.zudui {
  position: absolute;
  top: 18px;
  right: 120px;
}

.baoming {
  position: absolute;
  right: 30px;
  top: 18px;
  color: white;
}
