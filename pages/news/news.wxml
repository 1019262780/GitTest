            <image src="{{item.img}}" class="list_hot"></image>
          </view>
          <view class="layout_horizontal">
            <view class="list-browse">{{item.browse}}浏览</view>
            <view class="list-date">{{item.publish_time}}</view>
          </view>
        </view>
        <view>
          <image src="{{item.image}}" class="list_pic"></image>
        </view>
      </view>
    </view>
  </view>
</view>