<form bindsubmit='submitForm'>
  <view class="content">
    <view class="hr"></view>
    <view class="item">
      <input type="text" name="name" placeholder='请输入姓名' placeholder-class='holder' />
    </view>
    <view class='item'>
      <input type='idcard' name="idcard" maxlength='18' placeholder='请输入身份证号码' placeholder-class='holder' />
    </view>
    <view class='item'>
      <input type='password' name="password" maxlength='16' id="password" placeholder='请输入密码（需包含数字和字母）' placeholder-class='holder' />
    </view>
    <view class='item'>
      <input type='password' name="password1" maxlength='16' placeholder='请确认密码' placeholder-class='holder' />
    </view>
    <view class="mobileInfo">
      <view class='mobile'>
        <input maxlength='11' placeholder='请输入手机号码'bindinput='bindPhoneInput' type='number'  name="tel" placeholder-class='holder'></input>
         <button class='code' bindtap='getCode' hidden='{{hidden}}' disabled='{{btnDisabled}}'>{{btnValue}}</button>
      </view>
      
    </view>
    <view class="item">
      <input type="text" name="regcode" placeholder='短信验证码' bindinput='bindCodeInput' placeholder-class='holder' />
    </view>
    <view class='read-man-pact'>
      <checkbox-group name="assistance">
        <checkbox></checkbox>
        <navigator class='pact'>阅读《顺风男服务协议》</navigator>
      </checkbox-group>
    </view>
    <button class="btn" type='{{btnstate}}' form-type="submit">注册</button>



