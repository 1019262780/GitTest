.layout_horizontal {
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
}

/*纵向布局  */

.layout_vertical {
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: column;
}

.img1 {
  width: 60px;
  height: 60px;
}

.img2 {
  width: 60px;
  height: 25px;
  position: absolute;
  right: 20px;
  margin-top: 10px;
}

.lis {
  border-bottom: 10px solid #e5e5e5;
}

.list {
  margin-left: 30rpx;
  margin-right: 30rpx;
  padding-bottom: 15rpx;
  margin-top: 50rpx;
}

.list-title {
  color: blue;
  margin-left: 10px;
  font-size: 14px;
  margin-top: 10px;
  font-weight: bold;
  opacity: 0.7;
}

.list-title1 {
  margin-top: 10px;
  margin-left: 10px;
  font-size: 14px;
  opacity: 0.8;
}

.list-title2 {
  font-size: 12px;
  opacity: 0.5;
  margin-top: 10px;
  margin-left: 10px;
}

.tip {
  color: rgb(238, 36, 36);
  margin-right: 10px;
}

.tip1 {
  font-size: 14px;
  margin-top: 10px;
  line-height: 25px;
}

.shareicon {
  padding-top: 10px;
  border-top: 4rpx solid #e5e5e5;
  margin-top: 30px;
  width: 100%;
  justify-content: center;
  opacity: 0.8;
  font-size: 14px;
}

.img3 {
  width: 20px;
  height: 20px;
  margin: 0 15px;
}

.btn::after {
  border: none;
}

.btn {
  border: none;
  outline: none;
  background: #fff;
  margin: 0;
  padding: 0;
  opacity: 0.8;
  height: 30px;
  font-size: 14px;
}
