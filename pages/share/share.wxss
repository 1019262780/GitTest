@import '../../components/wuxfilterbar.wxss';

.back {
  padding-left: 16rpx;
  padding-right: 16rpx;
  padding-bottom: 50rpx;
  background-size: 100% 100%;
  margin-bottom: -320rpx;
  background-image: url("http://106.12.109.65/yousai_img/public.png");
}

.header {
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
}

.header image {
  height: 25px;
  width: 25px;
  margin-top: 10px;
}

.headertext {
  font-size: 18px;
  width: 100%;
  text-align: center;
  margin-top: 20px;
  color: white;
}

.new {
  position: absolute;
  left: 20px;
}

.search {
  position: absolute;
  right: 60px;
  top: 6px
}

.button {
  position: absolute;
  right: 20px;
}

.navbar {
  margin-top: 45%;
  width: 100%;
  font-size: 20px;
  justify-content: center;
  display: flex;
  flex-direction: row;
  border-bottom: 2px solid #f0f0f0;
}

.navbar .item {
  margin: 0 10%;
  line-height: 80rpx;
}

.navbar .item.active {
  background: linear-gradient(to right, rgb(245, 248, 88), rgb(238, 36, 36));
  -webkit-background-clip: text;
  color: transparent;
  font-weight: bold;
  border-bottom: 2px solid rgb(245, 248, 88);
}

