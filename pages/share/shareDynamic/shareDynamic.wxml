<view class='comment-detail-box'>
  <view class='comment-main-box'>
    <view class="list">
      <view class="layout_horizontal">
        <view>
          <image src="{{item.img}}" class="img1"></image>
        </view>
        <view class="layout_vertical">
          <view class="layout_horizontal">
            <view class="list-title">{{item.title}}</view>
            <view class="list-title1">{{item.name}}</view>
            <view>
              <image src="{{item.image}}" class="img2"></image>
            </view>
          </view>
          <view class="list-title2">{{item.tit1}}</view>
        </view>
      </view>
      <view class="layout_horizontal">
        <view class="tip1">
          <text class="tip">{{item.tip}}</text>{{item.lang}}
          <text>{{item.lang1}}</text>
        </view>
      </view>
    </view>
    <view class="layout_horizontal">
      <image src="{{item.img1}}" class="exp"></image>
      <view class="title">{{item.title}}</view>
    </view>
    <view class="lis"></view>
    <view class="list">
      <view class="comment">全部评论{{item.commentCount}}</view>
      <view class="layout_horizontal">
        <view>
          <image src="{{item.image4}}" class="img4"></image>
        </view>
        <view class="layout_vertical">
          <view class="layout_horizontal">
            <view class="list-title1">{{item.name1}}</view>
            <view bindtap="onUpTap" data-share-id="{{item.shareId}}">
              <image wx:if="{{item.upStatus}}" src="{{item.image66}}" class="img5"></image>
              <image wx:else src="{{item.image5}}" class="img5"></image>
              <view class="up">{{item.upCount}}</view>
            </view>
          </view>
          <view class="list-title3">{{item.lang2}}</view>
          <view>
            <image src="{{item.image6}}" class="img6"></image>
          </view>
          <view class="name">
            <view class="layout_horizontal">
              <view class="name1">{{item.name2}}</view>
              <view>：{{item.lang3}}</view>
            </view>
            <view class="layout_horizontal">
              <view class="name1">{{item.name2}}</view>
              <view>：{{item.lang3}}</view>
            </view>
            <view class="name2">查看全部11条评论>></view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="bottom">
    <view class="bottom-content">
      <view class="list1">
        <view class='shareicon' bindtap="onShareAppMessage">
          <button class="btn" id="shareBtn" open-type="share" hover-class='none'>
            <image src="{{item.image1}}" class="img3"></image>
            转发
          </button>
        </view>
        <view class='shareicon'>
          <image src='{{item.image2}}' class="img3"></image>评论
        </view>
        <view class='shareicon' bindtap='onCollectionTap' data-share-id="{{item.shareId}}">
          <image wx:if="{{item.collectionStatus}}" src='{{item.image55}}' class="img3"></image>
          <image wx:else src='{{item.image3}}' class="img3"></image>收藏</view>
      </view>
    </view>
  </view>
</view>